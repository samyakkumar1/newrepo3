<section class="page_top">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Add Other Products</h1>
            </div>
        </div>
    </div>
</section>
<div class="container">
    <div class="row">
        <form role="form">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <span>Watch some example videos</span> <a target="_blank" href="https://drive.google.com/open?id=0B7raZ0wto1v-NDQ2RmFrb0FtcWZTY2dwZUZqSjV2b2hJUHh3">Mug</a>, <a target="_blank" href="https://drive.google.com/open?id=0B7raZ0wto1v-OWhzRFNKVURNVWNQLTk1ckxpR0tJT1ZOWDZr">T-Shirt</a>
                    </div>
                    <div class="form-group">
                        <label for="addOtherProdName">Product Name</label>
                        <input type="text" class="form-control" id="addOtherProdName"
                               placeholder="Enter Product Name">
                    </div>
                    <div class="form-group">
                        <label for="addOtherProdName">Product Category</label>
                        <select class="form-control" id="addOtherProdCategory" ></select>
                    </div>
                    <div class="form-group">
                        <label for="addOtherProdDesc">Description</label>
                        <input type="text" class="form-control" id="addOtherProdDesc"
                               placeholder="Enter Product Description">
                    </div>
                    <div class="form-group">
                        <label for="addOtherProdStatus">Status</label>
                        <select id="addOtherProdStatus" class="form-control">
                            <option value="New">Not Visible in Site</option>
                            <option value="Active">Visible in Site</option>
                        </select>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-9">
                            <label for="frontProdImg">Front Image</label>
                            <input type="file" class="filestyle form-control" data-buttonName="btn-primary"
                                   id="frontProdImg" accept="image/*">
                        </div>
                        <div class="form-group col-md-3">
                            <label for="backProdImg" style="display: block">&nbsp;</label>
                            <button class="form-control btn btn-primary removeFrontBtn">Remove</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-9">
                            <label for="backProdImg">Back Image</label>
                            <input type="file" class="filestyle form-control" data-buttonName="btn-primary"
                                   id="backProdImg" accept="image/*">
                        </div>
                        <div class="form-group col-md-3">
                            <label for="backProdImg" style="display: block">&nbsp;</label>
                            <button class="form-control btn btn-primary removeBackBtn">Remove</button>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="addOtherProdSeoUrl">SEO URL (Name only, without /)</label>
                        <input type="text" class="form-control" id="addOtherProdSeoUrl"
                               placeholder="Enter SEO url: eg. design-mug-online">
                    </div>
                    <div class="form-group">
                        <label for="addOtherProdSeoTitle">SEO Title</label>
                        <input type="text" class="form-control" id="addOtherProdSeoTitle"
                               placeholder="Enter SEO Title">
                    </div>
                    <div class="form-group">
                        <label for="addOtherProdSeoDesc">SEO Description</label>
                        <input type="text" class="form-control" id="addOtherProdSeoDesc"
                               placeholder="Enter SEO Description">
                    </div>
                    <div class="form-group">
                        <label for="addOtherProdSeoKeyword">SEO Keyword</label>
                        <input type="text" class="form-control" id="addOtherProdSeoKeyword"
                               placeholder="Enter SEO Keyword">
                    </div>
                </div>
                <div class="col-md-6" id="saveProductWarning">Please save the product to change parameters.</div>
                <div class="col-md-6" id="productParamsDiv">
                    <div id="tabs">
                        <ul>
                            <li><a href="#tabs-1">Front Side</a></li>
                            <li><a href="#tabs-2">Back Side</a></li>
                            <li><a href="#tabs-3">Designs</a></li>
                            <li><a href="#tabs-4">Purchase Settings</a></li>
                        </ul>
                        <div id="tabs-1">
                            X: <span id="frontX"></span>px
                            <div id="x_slider"></div>
                            Y: <span id="frontY"></span>px
                            <div id="y_slider"></div>
                            Scale: <span id="frontWidth"></span>px
                            <div id="width_slider"></div> 
                            Curve Depth: <span id="frontCurve"></span>px
                            <div id="amplitude_slider"></div>
                            Crop: <span id="frontCrop"></span>px
                            <div id="crop_slider"></div>  


                            Width: <span id="frontRWidth"></span>px
                            <div id="rwidth_slider"></div>  
                            Height: <span id="frontHeight"></span>px
                            <div id="height_slider"></div>   

                            <div style="visibility: hidden; position: absolute">
                                Crop Left: <span id="frontLeftCrop"></span>px
                                <div id="crop_left_slider"></div>
                                Crop Right: <span id="frontRightCrop"></span>px
                                <div id="crop_right_slider"></div> 
                            </div>
                            Rotate: <span id="frontRotate"></span> degree
                            <div id="rotate_slider"></div> 
                            <br/>
                            <div class="canvasBgFront"> 
                                <h4>Preview</h4>
                                <iframe name="canvasBgFront" src="/product-preview/product-preview.html" id="canvasBgFront"></iframe>
                            </div>
                        </div>
                        <div id="tabs-2">
                            X: <span id="backX"></span>px
                            <div id="x_slider1"></div>
                            Y: <span id="backY"></span>px
                            <div id="y_slider1"></div>
                            Scale: <span id="backWidth"></span>px
                            <div id="width_slider1"></div>
                            Curve Depth: <span id="backCurve"></span>px
                            <div id="amplitude_slider1"></div>
                            Crop: <span id="backCrop"></span>px
                            <div id="crop_slider1"></div>


                            Width: <span id="backRWidth"></span>px
                            <div id="rwidth_slider1"></div>  
                            Height: <span id="backHeight"></span>px
                            <div id="height_slider1"></div>  
                            <div style="visibility: hidden; position: absolute">
                                Crop Left: <span id="backLeftCrop"></span>px
                                <div id="crop_left_slider1"></div>
                                Crop Right: <span id="backRightCrop"></span>px
                                <div id="crop_right_slider1"></div>
                            </div>
                            Rotate: <span id="backRotate"></span> degree
                            <div id="rotate_slider1"></div> 
                            <br/>
                            <div class="canvasBgBack">
                                <h4>Preview</h4>
                                <iframe name="canvasBgBack" src="/product-preview/product-preview.html" id="canvasBgBack"></iframe> 
                            </div>
                        </div>
                        <div id="tabs-3">
                            <div class="row">
                                <input type="file" id="designUploader"/>
                                <button class="btn btn-success btn-xs pull-right addNewDesignButton">Add new Design</button>
                            </div>
                            <div class="row" id="designPics"></div>
                        </div>
                        <div id="tabs-4">
                            <div class="row"> 
                                <input type="button" class="btn btn-success btn-xs pull-right addNewProductSetting" data-toggle="modal" data-target="#newSettingModel" value="Add new setting" />
                            </div>
                            <div class="row">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th class="col-md-1">Page</th>
                                            <th class="col-md-4">Name</th>
                                            <th class="col-md-4">Type</th>
                                            <th class="col-md-3">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody id="otherProductSettings">

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <br/>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-danger pull-left col-md-2" onclick="history.back()">Back</button>
                <button class="btn btn-primary pull-right col-md-2" id="addOtherProdSaveBtn">Save</button>
            </div>
        </form>
    </div>
</div>
<br/>

<div id="newSettingModel" class="modal fade" role="dialog" data-backdrop="static">
    <div class="modal-dialog"> 
        <!-- Modal content-->
        <div class="modal-content" style="width: 720px">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Product pricing parameter</h4>
            </div>
            <div class="modal-body"> 
                <form role="form"> 
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label for="title">Label</label>
                            <input data-toggle="tooltip" title="The label to display near the control." data-placement="top" type="text" class="form-control" id="otherProductParamSettingName" placeholder="eg: Quantity, Choose Color etc" />
                        </div>
                        <div class="form-group col-md-4">
                            <label for="settingType">Control Type</label>
                            <select data-html="true" data-toggle="tooltip" title="The type of the control.Quantity: The quantity text box, Quantity With Size: Quantity editing with another parameter( eg: for entering qty with the size of t-shirt), Pricing label: the pricing list "  class="form-control" id="settingType">
                                <option>Text</option>
                                <option value="Combo">Drop Down List</option>
                                <option>Color</option>
                                <option>Radio</option>
                                <option>Checkbox</option>
                                <option>Quantity</option>
                                <option value="QuantityWithSize">Quantity with size</option>
                                <option>Pricing Label</option>
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="title">Page</label>
                            <input data-toggle="tooltip" title="The page where this setting to be displayed." type="text" class="form-control" id="otherProductParamSettingPage" placeholder="Enter Page Number" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label for="title">Related Setting</label>
                            <select data-toggle="tooltip" title="Select a setting that is related to this setting. eg. Quantity is related to Pricing List not the other way around." class="form-control" id="relatedSetting">
                            </select>
                        </div>
                        <div class="form-group col-md-4" data-toggle="tooltip" title="Check if this setting is independent of total pricing. eg: shipping">
                            <div>.</div>
                            <label for="independentPricing">Independent Pricing?</label>
                            <input id="independentPricing" type="checkbox"/>
                        </div>
                    </div>
                    <div class="form-group"> 
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th class="col-md-4">Value Label</th> 
                                    <th class="col-md-1">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="valueList">

                            </tbody> 
                        </table>
                    </div>    
                </form>  
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success pull-left" id="newValueBtn">New Value</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveProductParam">Save</button>
            </div>
        </div>

    </div>
</div>
