<% include myHeader.ejs %>
<script>
    $(function () {
        $("#pageLoginBtn").click(function (e) {
            e.preventDefault();
            addWaitingOverlay();
            signin($("#pageEmailid").val(), $("#pagePassword").val(), function (resp) {
                var from = getURLParameterByName("from");
                //if(from){
                //    window.location = "/" + from;
                //} else {
                    window.location = "/";
                //}
            }, function (err) {
                removeWaitingOverlay();
                console.log(err);
                bootbox.alert(typeof err == "string" ? err : "Server Error: " + err.error);
            });
        });
    });
</script>
<section class="page-top page-top-logo">
  <div class="container" style="margin-top:120px;">
    <div class="row">
      <div class="col-md-12">
        <h3>Sign in</h3>
      </div>
    </div>
  </div>
</section>
<div class="container"> 
    <form action="#" id="loginFormOnTop" method="post"> 
        <div class="form-group">
            <div class="col-md-4 col-xs-4">
                <span class="error-signin"></span>
                <input type="text" value="" class="form-control input-lg" id="pageEmailid" name="pageEmailid" required="true" email="true" placeholder="Email Address"
                style="box-shadow: 1px 0px 10px 1px rgba(0,0,0,.075);">
            </div>
        </div> 
        <div class="form-group">
            <div class="col-md-4 col-xs-4">
                <input type="password" value=""
                       class="form-control input-lg" id="pagePassword"
                       name="pagePassword" required="true"
                       minlength="5" placeholder="Password" style="box-shadow: 1px 0px 10px 1px rgba(0,0,0,.075);">
                <br /> 
                <!--<p style="display: inline" class="sign-up-info">Don't have an account yet? <a href="/signup" id="headerSignUp">Create Account</a></p>-->
            </div>
        </div> 
        <div class="row">
        <div class="col-md-2 col-xs-2" style="display: grid;text-align: center;margin-left: 20px;">
            <input type="submit" value="Login" id="pageLoginBtn" class="btn btn-primary2 pull-right push-bottom" data-loading-text="Loading..."
            style="background-color: #505bda; line-height: 1; height: 10%; margin-bottom: 10px;">
            <a class="pull-right" href="/forgot-password">Forgot Password?</a>
        </div> 
        <div class="col-lg-3" style="width:100px">
            <span class="remember-box checkbox" style="margin-top: 0px;font-size: 14px;">
                <label for="rememberme" style="padding-left: 0px;">
                    <input type="checkbox" id="rememberme" name="rememberme" checked="true" style="min-height:20px;margin-left:-10px;">Remember Me
                </label>
            </span>
        </div></div>
    </form>
</div>
<% include myFooter.ejs %>